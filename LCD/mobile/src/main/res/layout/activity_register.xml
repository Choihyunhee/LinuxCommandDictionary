<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linuxcommand.lcd.RegisterActivity">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/job"
            android:layout_below="@+id/job"
            android:layout_marginTop="16dp"
            android:text="회원들의 편의를 위하여 계정만 만드는 형식으로 아이디/비밀번호 찾기가 지원되지 않습니다. 즐겨찾기 복구가 되지 않으니 이 점 양해부탁 드립니다." />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignStart="@+id/pwd"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/id"
            android:layout_below="@+id/id"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignEnd="@+id/textView3"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="17dp"
            android:text="직업"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="227dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@+id/pwd"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/job"
            android:text="나이"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="227dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignBaseline="@+id/pwd"
            android:layout_alignBottom="@+id/pwd"
            android:layout_alignEnd="@+id/textView6"
            android:text="비밀번호"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="227dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            app:srcCompat="@drawable/registerlabel" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:text="즐겨찾기 메뉴를 제공해드리고자 회원제를 실시하고 있습니다. 회원님의 정보는 다른 곳에 이용되지 않습니다. 솔직한 정보 입력 부탁드립니다." />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="31dp"
            android:text="아이디"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/age"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@android:color/holo_red_light"
            android:onClick="Register"
            android:text="가입 하기" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
